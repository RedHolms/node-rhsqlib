{
  "name": "rhsqlib",
  "author": "RedHolms",
  "description": "Library for dynamic cacheable SQL with different backends",
  "license": "Free to use, edit and distribute WITH ORIGINAL AUTHORSHIP",
  "version": "1.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/redholms/node-rhsqlib.git"
  },
  "keywords": [
    "sql",
    "sqlite"
  ],
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "typings": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "default": "./types/index.d.ts"
      },
      "default": {
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsx ./scripts/build.ts",
    "watch": "tsx ./scripts/build.ts -w",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build"
  },
  "dependencies": {
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "esbuild": "^0.25.6",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "files": [
    "src",
    "dist",
    "types"
  ]
}
